// 1. Roles enum
enum Role {
  STAFF
  SUPERVISOR
  ADMIN
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Staff model (User)
model Staff {
  id           Int          @id @default(autoincrement())
  name         String
  email        String       @unique
  password     String
  role         Role         @default(STAFF)

  supervisorId Int?
  supervisor   Staff?       @relation("StaffHierarchy", fields: [supervisorId], references: [id], onDelete: SetNull)
  subordinates Staff[]      @relation("StaffHierarchy")

  pickups      Pickup[]
}

// 3. Pickup Model
model Pickup {
  id        Int      @id @default(autoincrement())
  staffId   Int
  staff     Staff    @relation(fields: [staffId], references: [id])

  category  String
  weight    Float
  co2Saved  Float
  latitude  Float
  longitude Float
  imageUrl  String?
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([staffId])
}

